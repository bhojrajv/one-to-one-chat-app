<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
     <ImageView
         android:id="@+id/imgprof"
         android:background="@drawable/profile_activity"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
     </ImageView>
     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/profile_act"
         android:layout_width="140dp"
         android:layout_height="140dp"
          android:layout_centerHorizontal="true"
          app:civ_border_color="@color/colorPrimary"
          app:civ_border_width="2dp"
          android:src="@drawable/profile_image"
          android:layout_marginTop="160dp">
     </de.hdodenhof.circleimageview.CircleImageView>
     <TextView
         android:id="@+id/userNm"
         android:layout_marginTop="10dp"
         android:layout_below="@+id/profile_act"
         android:layout_width="match_parent"
         android:textColor="#000000"
         android:textAlignment="center"
        android:layout_centerHorizontal="true"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true">
     </TextView>
     <TextView
         android:id="@+id/userstatus"
         android:layout_marginTop="10dp"
         android:layout_below="@+id/userNm"
         android:layout_width="match_parent"
         android:textColor="#000000"
         android:textAlignment="center"
         android:layout_centerHorizontal="true"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true">
     </TextView>
     <Button
         android:id="@+id/sendbtn"
         android:layout_below="@+id/userstatus"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:background="@color/colorPrimary"
         android:text="Send Message"
         android:textColor="#ffffff"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
     </Button>
     <Button
         android:id="@+id/declienbtn"
         android:layout_below="@+id/sendbtn"
         android:layout_marginTop="5dp"
         android:visibility="invisible"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:background="@color/colorPrimary"
         android:text="Cancel Chat Reauest"
         android:textColor="#ffffff"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
     </Button>
</RelativeLayout>