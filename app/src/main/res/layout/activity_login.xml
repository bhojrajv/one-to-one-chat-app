<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/img"
               android:background="@drawable/login_photo"
               android:layout_width="match_parent"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true"
               android:layout_height="300dp"
               android:layout_alignParentLeft="true">
           </ImageView>
          <com.google.android.material.textfield.TextInputLayout
              android:layout_below="@+id/img"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_width="match_parent"
              style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
              android:layout_height="wrap_content">
              <com.google.android.material.textfield.TextInputEditText
                  android:layout_width="match_parent"
                  android:hint="Enter your Email"
                  android:inputType="textEmailAddress"
                  android:id="@+id/email"
                  android:drawableStart="@drawable/email"
                  android:layout_height="wrap_content"
                  android:drawableLeft="@drawable/email">
              </com.google.android.material.textfield.TextInputEditText>
          </com.google.android.material.textfield.TextInputLayout>
          <com.google.android.material.textfield.TextInputLayout
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_width="match_parent"
              style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
              android:layout_height="wrap_content">
              <com.google.android.material.textfield.TextInputEditText
                  android:layout_width="match_parent"
                  android:layout_below="@+id/email"
                  android:inputType="textPassword"
                  android:id="@+id/password"
                  android:hint="Enter your password"
                  android:drawableStart="@drawable/password"
                  android:layout_height="wrap_content"
                  android:drawableLeft="@drawable/password">
              </com.google.android.material.textfield.TextInputEditText>
          </com.google.android.material.textfield.TextInputLayout>
          <TextView
              android:id="@+id/frgotpass"
              android:layout_below="@+id/password"
              android:layout_marginTop="5dp"
              android:text="forgot password?"
              android:textAlignment="textEnd"
              android:layout_width="match_parent"
              android:textStyle="bold"
              android:textColor="@color/colorPrimary"
              android:textSize="15dp"
              android:paddingRight="10dp"
              android:layout_height="wrap_content"
              android:gravity="end">
          </TextView>
          <Button
              android:id="@+id/loginbtn"
              android:layout_below="@+id/frgotpass"
              android:background="@drawable/button"
              android:layout_width="match_parent"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="5dp"
              android:text="login"
              android:textSize="20dp"
              android:textColor="@color/colorAccent"
              android:layout_marginRight="10dp"
              android:layout_height="wrap_content">
          </Button>
          <TextView
              android:id="@+id/newAccount"
              android:layout_below="@+id/loginbtn"
              android:layout_marginTop="5dp"
              android:text="Create new Account?"
              android:textAlignment="center"
              android:layout_width="match_parent"
              android:textStyle="bold"
              android:textColor="@color/colorPrimary"
              android:textSize="15dp"
              android:paddingRight="10dp"
              android:layout_height="wrap_content"
              android:gravity="center">
          </TextView>
          <TextView
              android:id="@+id/loginwithphn"
              android:layout_below="@+id/newAccount"
              android:layout_marginTop="5dp"
              android:text="Login with your"
              android:textAlignment="center"
              android:layout_width="match_parent"
              android:textStyle="bold"
              android:textSize="20dp"
              android:paddingRight="10dp"
              android:layout_height="wrap_content"
              android:gravity="center">
          </TextView>
          <Button
              android:id="@+id/phone"
              android:layout_below="@+id/loginwithphn"
              android:background="@drawable/button"
              android:layout_width="match_parent"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="5dp"
              android:text="phone"
              android:textSize="20dp"
              android:textColor="@color/colorAccent"
              android:layout_marginRight="10dp"
              android:layout_height="wrap_content">
          </Button>
      </LinearLayout>
  </ScrollView>
</RelativeLayout>