<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
     android:paddingBottom="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentTop="true"
            android:id="@+id/privatechatProfile"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/privatechatProfile"
            android:layout_marginTop="4dp"
            android:background="@drawable/receiver_layout"
            android:id="@+id/recevermsg"
            android:padding="10dp"
            android:textSize="12dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:id="@+id/image_sender"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:layout_margin="2dp"
            android:layout_alignParentEnd="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true">
        </ImageView>
        <ImageView
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:id="@+id/image_receiver"
           android:layout_marginLeft="60dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentStart="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true">
        </ImageView>
        <TextView
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_alignTop="@+id/recevermsg"
            android:id="@+id/sendermsg"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:textSize="12dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/sender_layout"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
        </TextView>
    </RelativeLayout>

